{
  "name": "@sarahbonzelet.de/backend",
  "version": "0.2.0",
  "bin": {
    "backend": "bin/backend.js"
  },
  "scripts": {
    "build": "tsc",
    "build:production": "npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "test:ci": "jest --coverage",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy sarah-bonzelet-de-dev --require-approval never --outputs-file outputs.json",
    "deploy:prod": "cdk deploy sarah-bonzelet-de-prod --require-approval never --outputs-file outputs.json",
    "diff": "cdk diff",
    "format": "prettier --config .prettierrc.json '**/*.{js,ts,md}' --write",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx --quiet",
    "lint:ci": "eslint . --ext .ts,.tsx --quiet",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "tsc --noEmit && lint-staged",
    "prepush": "jest"
  },
  "devDependencies": {
    "@aws-sdk/client-sesv2": "3.53.0",
    "@types/aws-lambda": "8.10.92",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.13.0",
    "aws-cdk": "2.15.0",
    "aws-cdk-github-oidc": "^2.2.0",
    "aws-sdk-client-mock": "0.6.0",
    "aws-xray-sdk": "3.3.4",
    "esbuild": "0.14.23",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.1",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@aws-cdk/aws-amplify-alpha": "2.13.0-alpha.0",
    "aws-cdk-lib": "2.13.0",
    "constructs": "10.0.80",
    "dotenv": "16.0.0",
    "source-map-support": "0.5.21"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "npm run test -- --bail --coverage=false --findRelatedTests"
    ]
  }
}
